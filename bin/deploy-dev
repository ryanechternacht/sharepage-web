#!/bin/sh

DEFAULT='\033[0m'
GREEN='\033[0;32m'
LIGHT_BLUE='\033[1;34m'

aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 126599745635.dkr.ecr.us-east-1.amazonaws.com
echo "${GREEN}Step 1 Complete:${DEFAULT} Refreshing AWS token
"

docker build -f deployment/dev/Dockerfile-dev -t buyersphere-web .
echo "${GREEN}Step 2 Complete:${DEFAULT} Building Docker image
"

docker tag buyersphere-web:latest 126599745635.dkr.ecr.us-east-1.amazonaws.com/buyersphere-web:latest
echo "${GREEN}Step 3 Complete:${DEFAULT} Tagging Docker image
"

docker push 126599745635.dkr.ecr.us-east-1.amazonaws.com/buyersphere-web:latest
echo "${GREEN}Step 4 Complete:${DEFAULT} Deploying Docker image

Check AWS AppRunner (link below) to see the service deployment:

${LIGHT_BLUE}https://us-east-1.console.aws.amazon.com/apprunner/home?region=us-east-1#/services/dashboard?service_arn=arn%3Aaws%3Aapprunner%3Aus-east-1%3A126599745635%3Aservice%2Fbuyersphere-web%2F63731f5a1e6144c4b13eecdcbe870eb2&active_tab=logs${DEFAULT}

"
