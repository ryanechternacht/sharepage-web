#!/bin/sh

DEFAULT='\033[0m'
GREEN='\033[0;32m'
CYAN='\033[1;36m'

aws ecr get-login-password --profile sp | docker login --username AWS --password-stdin 471112549420.dkr.ecr.us-east-2.amazonaws.com
echo "${GREEN}Step 1 Complete:${DEFAULT} Refreshing AWS token
"

docker build -f deployment/dev/Dockerfile-dev -t swaypage-web-dev .
echo "${GREEN}Step 2 Complete:${DEFAULT} Building Docker image
"

docker tag swaypage-web-dev:latest 471112549420.dkr.ecr.us-east-2.amazonaws.com/swaypage-web-dev:latest
echo "${GREEN}Step 3 Complete:${DEFAULT} Tagging Docker image
"

docker push 471112549420.dkr.ecr.us-east-2.amazonaws.com/swaypage-web-dev:latest
echo "${GREEN}Step 4 Complete:${DEFAULT} Deploying Docker image

Check AWS AppRunner (link below) to see the service deployment:

${CYAN}https://us-east-2.console.aws.amazon.com/ecr/repositories/private/471112549420/swaypage-web-dev?region=us-east-2${DEFAULT}

"
